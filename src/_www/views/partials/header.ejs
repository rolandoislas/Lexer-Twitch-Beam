<!-- Standard meta -->
<% if (typeof(title) !== "undefined" && title !== "") { %>
	<% title += " - Lexer" %>
<% } else { %>
	<% title = "Lexer" %>
<% } %>
<title><%= title %></title>
<% if (typeof(description) == "undefined") description = ""; %>
<meta name="description" content="<%= description %>">
<!-- Schema -->
<script type="application/ld+json">
{
  "@context": "http://schema.org",
  "@type": "WebPage",
  "author": {
  	"@type": "Person",
  	"name": "Rolando Islas",
  	"url": "https://www.rolandoislas.com"
  },
  "name": "<%= title %>",
  "description": "<%= description %>",
  "thumbnailUrl": "https://data.rolandoislas.com/www/img/logo.png"
}
</script>
<!-- Open Graph -->
<meta property="og:site_name" content="Lexer">
<meta property="og:title" content="<%= title %>">
<meta property="og:description" content="<%= description %>">
<!-- CSS/JS -->
<link rel="shortcut icon" href="https://data.rolandoislas.com/www/img/favicon.ico">
<link rel="stylesheet" href="/css/style.css" media="screen" type="text/css">
<meta name="viewport" content="width=320" user-scalable="no">
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
